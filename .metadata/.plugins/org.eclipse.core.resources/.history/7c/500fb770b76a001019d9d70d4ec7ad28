spring.application.name=learningmanagement-backend

# ===============================
# = PostgreSQL Configuration
# ===============================
spring.datasource.url=jdbc:postgresql://localhost:5432/learningmanagement
spring.datasource.username=postgre
spring.datasource.password=mahesh
spring.datasource.driver-class-name=org.postgresql.Driver

# ===============================
# = JPA / Hibernate
# ===============================
spring.jpa.hibernate.ddl-auto=update  # use 'create' or 'validate' as needed
spring.jpa.show-sql=true
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.PostgreSQLDialect
spring.jpa.properties.hibernate.format_sql=true

# ===============================
# = Server Port (Optional)
# ===============================
server.port=8086

